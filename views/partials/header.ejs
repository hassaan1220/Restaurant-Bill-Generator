<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>
    <title>Bill Details</title>

    <style>
        body {
            background-color: black;
        }

        /* Glass effect */
        .glass-navbar {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        }

        /* Navbar brand */
        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
            color: #fff !important;
            transition: all 0.3s ease;
        }

        .navbar-brand:hover {
            color: black;
        }

        /* Navbar links */
        .navbar-nav .nav-link {
            font-weight: 500;
            font-size: 1rem;
            padding: 8px 16px;
            color: white;
            transition: all 0.3s ease;
            border-radius: 5px;
        }

        .navbar-nav .nav-link:active {
            color: white;
        }

        .navbar-nav .nav-link:hover {
            color: white;
        }

        .navbar {
            padding: 0.8rem 1.5rem;
        }

        /* Responsive padding */
        @media (max-width: 767px) {
            .navbar-nav {
                padding-top: 10px;
            }

            .navbar-nav .nav-item {
                margin-bottom: 10px;
            }
        }

        /* bill details form cntr */
        .main-container {
            padding: 60px 15px;
            display: flex;
            justify-content: center;
            align-items: flex-start;
        }

        .bill-cntr {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            border-radius: 15px;
            padding: 30px 25px;
            width: 100%;
            max-width: 600px;
        }

        .bill-cntr h3 {
            font-weight: 700;
            margin-bottom: 25px;
            color: white;
        }

        label {
            font-weight: 500;
            color: white;
        }

        .form-control {
            border-radius: 10px;
            padding: 10px 12px;
        }

        .product-btn {
            color: black;
            margin-top: 15px;
            border-radius: 8px;
            background-color: white;
            transition: background-color 0.3s ease;
        }

        .btn[type="submit"] {
            background-color: white;
            color: black;
            border-radius: 8px;
            transition: background-color 0.3s ease;
        }

        @media (max-width: 576px) {
            .bill-cntr {
                padding: 20px 15px;
            }

            .bill-cntr h3 {
                font-size: 1.5rem;
            }
        }

        /* orders.ejs file css start */
        .orders-cntr {
            padding: 40px 20px;
            background: #f7f9fc;
            min-height: 100vh;
        }

        .custom-table {
            border-radius: 10px;
            overflow: hidden;
            background-color: white;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
        }

        .custom-table thead {
            background-color: #343a40;
            color: white;
        }

        .custom-table th,
        .custom-table td {
            vertical-align: middle;
            text-align: center;
        }

        .custom-table tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .custom-table tbody tr:hover {
            background-color: #e8f0fe;
            transition: all 0.3s;
        }

        .btn-sm {
            background-color: #0d6efd;
            color: white;
            border-radius: 50px;
            padding: 4px 12px;
            font-size: 14px;
            transition: 0.3s;
        }

        .btn-sm:hover {
            background-color: #0b5ed7;
            color: white;
        }

        /* recipt.ejs file css start */
        .bill-cntr {
            background-color: #fff;
            padding: 30px 25px;
            margin: 20px 10px;
            border-radius: 10px;
            box-shadow: 0 0 12px rgba(0, 0, 0, 0.1);
            max-width: 450px;
        }

        .restaurant-title {
            font-size: 26px;
            font-weight: 700;
            letter-spacing: 1px;
            color: #0d6efd;
            margin-bottom: 5px;
        }

        .small-text {
            font-size: 13px;
            color: #6c757d;
            margin-bottom: 10px;
        }

        hr {
            border-top: 1px dashed #dee2e6;
            margin: 15px 0;
        }

        table {
            width: 100%;
            font-size: 14px;
        }

        table th {
            text-align: left;
            color: #343a40;
            font-weight: 600;
            padding-bottom: 5px;
        }

        table td {
            padding: 6px 4px;
        }

        .right {
            text-align: right;
        }

        .footer {
            margin-top: 20px;
            text-align: center;
            font-size: 13px;
            font-style: italic;
            color: #6c757d;
        }

        .btn-print {
            margin-top: 20px;
            background-color: #0d6efd;
            color: white;
            border-radius: 25px;
            padding: 6px 20px;
            font-weight: 500;
            transition: 0.3s;
        }

        .btn-print:hover {
            background-color: #0b5ed7;
        }

        /* Print Styling */
        @media print {
            body {
                background: none;
            }

            .btn-print,
            header,
            footer {
                display: none;
            }

            .bill-cntr {
                box-shadow: none;
                border: none;
            }

            .container-fluid {
                padding: 0;
            }
        }
    </style>

</head>

<body>

    <!-- navbar -->
    <nav class="navbar glass-navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Velvet Platet</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="/">Home</a>
                    </li>
                    <li class="nav-item ms-1">
                        <a class="nav-link" href="/orders">Orders</a>
                    </li>
                    <li class="nav-item ms-1">
                        <a class="nav-link" href="/bill">Bills</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>